# =============================================================================
# DecentraID - Production Environment Template
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
# Deploy to Render.com or similar PaaS

BACKEND_URL=https://your-backend.onrender.com
BACKEND_PORT=5000
BACKEND_NODE_ENV=production

# MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/decentraid

# 32-character encryption key for sensitive data
# Generate: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=your_32_character_hex_key

# Frontend URL for CORS configuration
FRONTEND_URL=https://decentraid.vercel.app

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Deploy to Vercel

VITE_API_URL=https://your-backend.onrender.com
VITE_NETWORK=sepolia

# =============================================================================
# BLOCKCHAIN CONFIGURATION (Optional)
# =============================================================================
# For smart contract deployment

# Your wallet private key (never share!)
PRIVATE_KEY=your_wallet_private_key_here

# Sepolia Testnet RPC (get free key from Infura)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Mainnet RPC (for production)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key

# =============================================================================
# DEPLOYMENT PROVIDERS
# =============================================================================

# Render Backend URL (after deployment)
RENDER_BACKEND_URL=

# Vercel Frontend URL (after deployment)
VERCEL_FRONTEND_URL=

# =============================================================================
# NOTES
# =============================================================================
# 1. Backend: Deploy DecentraID/backend to Render.com
# 2. Frontend: Deploy DecentraID/web to Vercel.com
# 3. Blockchain: Deploy contracts from DecentraID/blockchain
# 4. Update config.json with deployed contract addresses
