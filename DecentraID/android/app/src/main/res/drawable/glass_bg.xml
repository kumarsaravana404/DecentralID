<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient Background -->
    <item>
        <shape>
            <gradient
                android:startColor="#0F172A"
                android:endColor="#1E293B"
                android:angle="45" />
        </shape>
    </item>

    <!-- Blob 1 -->
    <item android:top="-100dp" android:left="-100dp">
        <shape android:shape="oval">
            <size android:width="300dp" android:height="300dp" />
            <solid android:color="#406366F1" /> <!-- Primary with opacity -->
        </shape>
    </item>

    <!-- Blob 2 -->
    <item android:bottom="-100dp" android:right="-100dp">
        <shape android:shape="oval">
            <size android:width="300dp" android:height="300dp" />
            <solid android:color="#40EC4899" /> <!-- Secondary with opacity -->
        </shape>
    </item>

    <!-- Blur Simulation (Overlay) -->
    <item>
        <color android:color="#1AFFFFFF" />
    </item>
</layer-list>