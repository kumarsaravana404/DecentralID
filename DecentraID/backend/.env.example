# =============================================================================
# DecentraID Backend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the required values
# Never commit .env to version control!
# =============================================================================

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 5000)
PORT=5000

# Environment mode - MUST be 'production' for deployment
NODE_ENV=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Connection String
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
# For local development: mongodb://localhost:27017/decentraid
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/decentraid?appName=DecentraID

# MongoDB Connection Pool Size (default: 10)
MONGODB_POOL_SIZE=10

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# IMPORTANT: Generate a secure 32-character hex string
# Run: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=your_32_character_hex_key_here

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Comma-separated list of allowed origins for CORS
# For production, list your frontend domain(s) exactly
# Example: https://decentraid.vercel.app,https://www.decentraid.app
CORS_ORIGIN=http://localhost:5173,https://your-production-frontend.vercel.app

# Frontend URL for generating shareable links
# This should match one of the CORS_ORIGIN values
FRONTEND_URL=http://localhost:5173

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Rate limit window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# =============================================================================
# BLOCKCHAIN CONFIGURATION (Optional)
# =============================================================================

# Only required if using blockchain features
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_project_id
# PRIVATE_KEY=your_wallet_private_key

# =============================================================================
# IPFS CONFIGURATION (Optional)
# =============================================================================

# Pinata API keys for real IPFS storage
# PINATA_API_KEY=your_pinata_api_key
# PINATA_SECRET_KEY=your_pinata_secret_key
