# =============================================================================
# DecentraID Frontend - Environment Variables
# =============================================================================
# Copy this file to .env.production or .env and fill in the values
# Variables prefixed with VITE_ are exposed to the client-side code
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API endpoint URL for the DecentraID backend
# For local development: http://localhost:5000
# For production deployment: https://your-backend.render.com or your custom domain
VITE_API_URL=http://localhost:5000

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Ethereum network for smart contract interactions
# Options: mainnet, sepolia, localhost
VITE_NETWORK=sepolia

# Optional: Custom RPC URL (if not using default Infura/public RPCs)
# VITE_RPC_URL=https://sepolia.infura.io/v3/your_project_id

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application name displayed in UI
VITE_APP_NAME=DecentraID

# Application version
VITE_APP_VERSION=1.0.0
